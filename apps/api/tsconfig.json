{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "dist",
    "skipLibCheck": true,
    "paths": {
      "@repo/shared": ["../../packages/shared/src/index.ts"],
      "@repo/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src", "scripts"]
}
